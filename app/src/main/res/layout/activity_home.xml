<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/home_toptop">

        <ImageView
            android:id="@+id/home_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:src="" />

        <ImageView
            android:id="@+id/home_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:src="" />

        <ImageView
            android:id="@+id/home_alarm_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="1dp"
            android:src="" />


    </LinearLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/home_top_tab"
        android:layout_width="match_parent"
        android:layout_height="467dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/home_top_tab_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/home_top_tab_recruting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/home_top_tab_whole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/home_top_tab_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="" />
    </com.google.android.material.tabs.TabLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/home_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:layout_marginBottom="1dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/home_bottom_tab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/home_bottom_tab_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/home_bottom_tab_tab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/home_bottom_tab_tab4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="" />
    </com.google.android.material.tabs.TabLayout>

</LinearLayout>